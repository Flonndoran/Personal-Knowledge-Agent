{
    // ========== PYTHON НАСТРОЙКИ ==========
    // 1. Указываем интерпретатор из venv
    "python.defaultInterpreterPath": "${workspaceFolder}/venv/Scripts/python.exe",
    // 2. Автоматически активировать venv в терминале
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    // 3. Анализ кода
    "python.analysis.typeCheckingMode": "basic", // Проверка типов
    "python.analysis.autoImportCompletions": true, // Автоимпорты
    "python.analysis.autoSearchPaths": true, // Автопоиск путей
    // 4. Тестирование (используем pytest)
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}",
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short"
    ],
    // ========== ФОРМАТИРОВАНИЕ ==========
    // 5. Используем black для форматирования
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length",
        "88"
    ],
    // 6. Автоформатирование при сохранении
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    // 7. Автоматическая организация импортов
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    // ========== ОБЩИЕ НАСТРОЙКИ ==========
    // 8. Скрываем ненужные файлы в Explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/*.pyc": true,
        "**/.git": true,
        "**/.hg": true,
        "**/.svn": true
    },
    // 9. Настройки для Python файлов
    "[python]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "always"
        },
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false
    },
    // 10. Терминал
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/src;${workspaceFolder}"
    },
    // 11. Дополнительные пути для анализа кода
    "python.analysis.extraPaths": [
        "./src",
        "./config"
    ],
    // 12. Игнорирование файлов для поиска
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.pyc": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.git": true,
        "data/**": true,
        "logs/**": true,
        "venv/**": true
    },
    // ========== WINDOWS СПЕЦИФИКА ==========
    // 13. Терминал по умолчанию (PowerShell)
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    // 14. Кодировка файлов для Windows
    "files.encoding": "utf8",
    "files.autoGuessEncoding": false,
    // 15. Завершающие символы строк
    "files.eol": "\n", // Используем LF даже на Windows
    // ========== ДЛЯ MCP ПРОЕКТА ==========
    // 16. Для работы с JSON (MCP использует много JSON)
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },
    // 17. Для работы с YAML (конфигурационные файлы)
    "[yaml]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    // 18. Автозакрывание тегов и кавычек
    "editor.autoClosingQuotes": "always",
    "editor.autoClosingBrackets": "always",
    // 19. Отображение TODO и FIXME
    "todohighlight.isEnable": true,
    "todohighlight.keywords": [
        "TODO:",
        "FIXME:",
        "BUG:",
        "NOTE:",
        "OPTIMIZE:",
        "HACK:"
    ]
}